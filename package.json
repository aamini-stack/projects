{
	"name": "@aamini/root",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"format": "prettier --check **/*.{js,ts,jsx,tsx,json,jsonc,html,css,md,yml,yaml}",
		"format:fix": "prettier --write **/*.{js,ts,jsx,tsx,json,jsonc,html,css,md,yml,yaml}",
		"check-types": "turbo run check-types",
		"lint": "oxlint --type-aware",
		"test": "turbo run test",
		"e2e": "turbo run e2e",
		"verify": "turbo run format build lint test check-types e2e"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "^0.0.4",
		"oxlint": "^1.12.0",
		"oxlint-tsgolint": "^0.0.4",
		"prettier": "^3.6.2",
		"turbo": "^2.5.5"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"overrides": {
			"vite": "^6.3.5"
		}
	}
}
