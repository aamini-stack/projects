{
	"name": "@aamini/root",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"format": "prettier --check **/*.{js,ts,tsx,json,html,css,md,yml,yaml,astro}",
		"format:fix": "prettier --write **/*.{js,ts,tsx,json,html,css,md,yml,yaml,astro}",
		"typecheck": "turbo run typecheck",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "turbo run test",
		"test:unit": "turbo run test:unit",
		"test:integration": "turbo run test:integration",
		"e2e": "turbo run --continue=dependencies-successful e2e",
		"e2e:update": "turbo run --continue=dependencies-successful e2e:update",
		"verify": "turbo run --continue=dependencies-successful build lint format test typecheck e2e"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"oxlint": "^1.32.0",
		"oxlint-tsgolint": "^0.8.4",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-jsdoc": "^1.8.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tsx": "^4.21.0",
		"turbo": "^2.6.3"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
