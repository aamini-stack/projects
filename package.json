{
	"name": "@aamini/root",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"check-types": "turbo run check-types",
		"test": "turbo run test",
		"e2e": "turbo run e2e",
		"verify": "turbo run build lint test check-types e2e",
		"verify:ci": "turbo run build lint:ci test check-types",
		"format": "prettier --write '**/*.{js,ts,jsx,tsx,json,jsonc,html,css,md,yml,yaml}'"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.5.5"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"overrides": {
			"vite": "^6.3.5"
		}
	}
}
