{
	"name": "@aamini/root",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"docker:build": "node scripts/docker-build.js",
		"format": "prettier --check '**/*.{js,ts,tsx,json,html,css,md,yml,yaml}'",
		"format:fix": "prettier --write '**/*.{js,ts,tsx,json,html,css,md,yml,yaml}'",
		"typecheck": "turbo run typecheck",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "turbo run test",
		"test:unit": "turbo run test:unit",
		"test:integration": "turbo run test:integration",
		"e2e": "turbo run --continue=dependencies-successful e2e",
		"e2e:update": "turbo run --continue=dependencies-successful e2e:update",
		"verify": "turbo run --continue=dependencies-successful build lint format test typecheck e2e"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"oxlint": "^1.36.0",
		"oxlint-tsgolint": "^0.10.0",
		"prettier": "^3.7.4",
		"prettier-plugin-jsdoc": "^1.8.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tsx": "^4.21.0",
		"turbo": "^2.7.2"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.25.0"
}
