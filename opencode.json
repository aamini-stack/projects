{
	"$schema": "https://opencode.ai/config.json",
	"instructions": ["README.md", "apps/*/README.md"],
	"agent": {
		"claude-code": {
			"mode": "primary",
			"model": "google/gemini-2.5-pro",
			"prompt": "{file:./prompts/system_prompt_main.md}"
		},
		"test": {
			"description": "Develops new unit or E2E tests using a TDD inspired methodology",
			"mode": "subagent",
			"model": "google/gemini-2.5-flash",
			"prompt": "{file:./prompts/testing.md}"
		}
	},
	"mcp": {
		"playwright-mcp": {
			"type": "local",
			"command": ["pnpm", "dlx", "@playwright/mcp@latest"],
			"enabled": true
		}
	}
}
