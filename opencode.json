{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["pnpm", "dlx", "@upstash/context7-mcp"],
			"enabled": true
		},
		"playwright": {
			"type": "local",
			"command": ["pnpm", "dlx", "@playwright/mcp@latest"],
			"enabled": true
		}
	},
	"agent": {
		"ui-designer": {
			"description": "Expert front-end engineer specializing in modern UIs",
			"mode": "subagent",
			"model": "openrouter/openai/gpt-5-codex",
			"prompt": "{file:./docs/ui-designer.md}",
			"tools": {
				"write": true,
				"edit": true,
				"bash": true
			}
		}
	}
}
