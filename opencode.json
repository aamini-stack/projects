{
	"$schema": "https://opencode.ai/config.json",
	"keybinds": {
		"session_child_cycle": "<leader>right",
		"session_child_cycle_reverse": "<leader>left"
	},
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["pnpm", "dlx", "@upstash/context7-mcp"],
			"enabled": true
		},
		"playwright": {
			"type": "local",
			"command": ["pnpm", "dlx", "@playwright/mcp@latest"],
			"enabled": true
		}
	},
	"agent": {
		"general": {
			"model": "openrouter/x-ai/grok-4-fast"
		},
		"ui-designer": {
			"description": "Expert front-end engineer specializing in modern UIs",
			"mode": "subagent",
			"prompt": "{file:./docs/ui-designer.md}",
			"tools": {
				"bash": true,
				"edit": true,
				"write": true,
				"read": true,
				"grep": true,
				"glob": true,
				"list": true,
				"patch": true
			}
		}
	}
}
