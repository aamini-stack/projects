{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".astro/**", ".vercel/**", "dist/**"]
		},
		"dev": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},

		"//#check": {},
		"//#check:fix": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["build", "^typecheck"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"test:unit": {
			"dependsOn": ["^test:unit"]
		},
		"test:integration": {
			"dependsOn": ["^test:integration"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"e2e": {
			"env": ["BASE_URL", "CI", "VERCEL_AUTOMATION_BYPASS_SECRET"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		},
		"e2e:update": {
			"cache": false,
			"env": ["BASE_URL", "CI", "VERCEL_AUTOMATION_BYPASS_SECRET"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		}
	}
}
