{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "CRON_SECRET",
        "MAILGUN_API_KEY",
        "MAILGUN_DOMAIN",
        "ENABLE_EXPERIMENTAL_COREPACK"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".astro/**", ".vercel/output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {
      "dependsOn": ["check-types"]
    },
    "test": {
      "dependsOn": ["build", "^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "dependsOn": ["build"],
      "env": ["BASE_URL", "CI"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    }
  }
}
