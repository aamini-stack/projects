{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "CRON_SECRET",
        "MAILGUN_API_KEY",
        "MAILGUN_DOMAIN",
        "ENABLE_EXPERIMENTAL_COREPACK"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".astro/**", ".vercel/output/**", "!.next/cache/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["check-types"]
    },
    "lint:ci": {
      "dependsOn": ["check-types"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "e2e": {
      "env": ["BASE_URL", "CI"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    }
  }
}
