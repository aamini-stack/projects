{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".astro/**", ".vercel/**", "dist/**"]
		},
		"dev": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},

		"//#format": {},
		"//#format:fix": {
			"cache": false
		},
		"//#lint": {},
		"//#lint:fix": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^build", "build", "^typecheck"]
		},
		"test": {
			"dependsOn": ["^build", "^test"]
		},
		"test:unit": {
			"dependsOn": ["^build", "^test:unit"]
		},
		"test:integration": {
			"dependsOn": ["^test:integration"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"e2e": {
			"dependsOn": ["^build"],
			"env": ["BASE_URL", "CI"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		},
		"e2e:update": {
			"dependsOn": ["^build"],
			"cache": false,
			"env": ["BASE_URL", "CI"],
			"passThroughEnv": ["PLAYWRIGHT_*"]
		}
	}
}
