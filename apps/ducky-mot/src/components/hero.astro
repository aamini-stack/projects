---
import { Calendar } from 'lucide-react'
---

<section
	class="relative flex min-h-screen items-start justify-center px-4 py-20 sm:px-6 lg:px-8"
>
	<div
		class="absolute inset-0 bg-gradient-to-br from-black via-gray-900/80 to-black"
	>
	</div>
	<div
		class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-black/20"
	>
	</div>
	<div class="absolute inset-0 overflow-hidden">
		<div
			class="absolute -right-40 -top-40 h-80 w-80 animate-pulse rounded-full bg-blue-500/5 blur-3xl"
		>
		</div>
		<div
			class="absolute -bottom-40 -left-40 h-80 w-80 animate-pulse rounded-full bg-purple-500/5 blur-3xl [animation-delay:2s]"
		>
		</div>
	</div>
	<div class="spinning-duck absolute inset-0 bg-transparent opacity-10"></div>

	<div class="relative z-10 mx-auto max-w-4xl space-y-8 text-center">
		{/* Title (ducky.mot) */}
		<div class="group relative">
			<img
				src="/title.svg"
				alt="DuckyMot logo"
				class="mx-auto h-24 w-auto sm:h-32 md:h-36"
			/>
			{/* Glow */}
			<div
				class="absolute inset-0 bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-blue-500/10 blur-xl transition-opacity duration-500"
			>
			</div>
		</div>

		{/* Sub-Header */}
		<div class="space-y-4">
			<h1
				class="font-hero-title text-3xl font-bold leading-tight text-white sm:text-4xl md:text-5xl"
			>
				<span
					class="bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text text-transparent"
				>
					An international community,
				</span>
				<br />
				<span
					class="bg-gradient-to-r from-blue-400 via-purple-400 to-blue-400 bg-clip-text text-transparent"
				>
					for students, by students.
				</span>
			</h1>

			<p
				class="mx-auto max-w-2xl text-lg leading-relaxed text-gray-300 md:text-xl"
			>
				Join us for unforgettable experiences, incredible music, and connections
				that last a lifetime.
			</p>
		</div>

		{/* Placeholder Button for Next Event */}
		<div class="pt-4">
			<div
				class="inline-flex cursor-default items-center gap-2 rounded-full border border-gray-700/50 bg-gradient-to-r from-gray-800/50 to-gray-900/50 px-6 py-3 text-base font-semibold text-gray-400 shadow-lg shadow-gray-900/20 backdrop-blur-sm sm:gap-3 sm:px-8 sm:py-4 sm:text-lg"
			>
				<Calendar className="h-5 w-5" client:load />
				<span class="whitespace-nowrap">Next event coming soon</span>
			</div>
		</div>
	</div>
</section>
