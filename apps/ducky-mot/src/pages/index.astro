---
import Aftermovie from '#/components/aftermovie.astro'
import BusinessInquiries from '#/components/business-inquiries.astro'
import { Events } from '#/components/events'
import Footer from '#/components/footer.astro'
import { Header } from '#/components/header'
import Hero from '#/components/hero.astro'
import OurMission from '#/components/our-mission.astro'
import Layout from '#/pages/_Layout.astro'
---

<Layout>
	<!-- Enhanced dark background with multiple layers -->
	<div
		class="fixed inset-0 -z-10 bg-gradient-to-br from-gray-900 via-black to-gray-800"
	>
	</div>
	<div
		class="fixed inset-0 -z-10 bg-gradient-to-t from-black/20 via-transparent to-black/40"
	>
	</div>

	<!-- Main container -->
	<div class="flex min-h-screen flex-col">
		<!-- Skip to content -->
		<a
			href="#content"
			class="sr-only rounded bg-yellow-400 px-4 py-2 text-black focus:not-sr-only focus:absolute focus:left-2 focus:top-2"
			>Skip to content</a
		>

		<!-- Header -->
		<Header client:load />

		<main id="content">
			<!-- Hero Section -->
			<Hero />

			<!-- Ducky Events -->
			<Events client:load />

			<!-- Aftermovie -->
			<Aftermovie />

			<!-- Our Mission -->
			<OurMission />

			<!-- Business Inquiries -->
			<BusinessInquiries />
		</main>

		<!-- Footer -->
		<Footer />
	</div>
</Layout>
