---
import { FruitCalendar } from '@/components/fruit-calendar'
import Layout from '@/pages/_layout.astro'
import { Calendar } from 'lucide-react'

export const prerender = true
---

<Layout>
	<div class="mx-auto max-w-4xl px-4 py-8">
		<div class="mb-12 text-center">
			<div
				class="mb-12 inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-purple-100 to-pink-100 px-6 py-3"
			>
				<Calendar size={20} className="text-purple-600" />
				<span class="font-medium text-purple-700">
					Your Weekly Fruit Plan
				</span>
			</div>
			<h2 class="mb-4 text-4xl font-bold text-gray-800">
				7 Days of Fruit Discovery
			</h2>
			<p class="mx-auto mb-6 max-w-2xl text-xl text-gray-600">
				A carefully curated selection of fruits for you to try throughout the
				week. Each day brings a new flavor adventure!
			</p>
		</div>
		<FruitCalendar client:load />
	</div>
</Layout>
