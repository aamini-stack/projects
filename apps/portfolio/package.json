	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"imports": {
		"#/*": "./src/*"
	},
	"scripts": {
		"build": "vite build",
		"dev": "vite dev --port 3000",
		"serve": "vite preview",
		"start": "node .output/server/index.mjs",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "vitest run",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project browser --project server",
		"test:watch": "vitest --watch",
		"e2e": "bash ../../scripts/e2e.sh portfolio",
		"e2e:update": "bash ../../scripts/e2e.sh portfolio --update-snapshots",
		"verify": "turbo run build lint format test typecheck e2e"
	},
