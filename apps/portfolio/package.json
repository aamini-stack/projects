{
	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"imports": {
		"#/*": "./src/*"
	},
	"scripts": {
		"build": "astro build",
		"dev": "astro dev",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "vitest run",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project browser",
		"test:watch": "vitest --watch",
		"e2e": "playwright test",
		"e2e:update": "playwright test --update-snapshots",
		"e2e:ci": "docker compose run --build --rm e2e",
		"e2e:ci:update": "docker compose run --build --rm e2e --update-snapshots",
		"verify": "turbo run build lint format test typecheck e2e"
	},
	"dependencies": {
		"@aamini/ui": "workspace:@aamini/ui-neobrutalist@*",
		"@aamini/utils": "workspace:*",
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-slot": "^1.2.3",
		"arktype": "^2.1.22",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"form-data": "^4.0.4",
		"lucide-react": "^0.545.0",
		"mailgun.js": "^12.1.0",
		"posthog-js": "^1.272.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.64.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@aamini/config-testing": "workspace:*",
		"@aamini/config-typescript": "workspace:*",
		"@astrojs/react": "^4.4.0",
		"@astrojs/vercel": "^8.2.8",
		"@playwright/test": "^1.56.0",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^24.7.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"@vitest/browser": "^3.2.4",
		"astro": "^5.14.1",
		"msw": "^2.11.3",
