{
	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"imports": {
		"#/*": "./src/*"
	},
	"scripts": {
		"build": "astro build",
		"dev": "astro dev",
		"start": "docker compose run --rm --build server",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "vitest run",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project browser --project server",
		"test:watch": "vitest --watch",
		"e2e": "docker compose run --rm --build e2e",
		"e2e:update": "docker compose run --rm --build e2e --update-snapshots",
		"verify": "turbo run build lint format test typecheck e2e"
	},
