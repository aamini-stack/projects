---
import '@aamini/ui/neobrutalist.css'
import { Analytics as VercelAnalytics } from '@vercel/analytics/react'
import Font from 'astro/components/Font.astro'
import { Toaster } from '@/components/sonner'
import PostHogAnalytics from '@/components/analytics-client.astro'
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<title>Aria Amini - Portfolio</title>
		<meta
			name="description"
			content="Portfolio of Aria Amini, a software engineer."
		/>
		<Font cssVariable="--font-inter" preload />
		<VercelAnalytics />
		<PostHogAnalytics />
		<script is:inline>
			posthog.init('phc_LWC2pawiFEeBiZTp3rxnzsebkRVJ1ZkOwsTiZARWXgC', {
				api_host: 'https://us.i.posthog.com',
				defaults: '2025-05-24',
			})
		</script>
	</head>
	<body class="antialiased">
		<slot />
		<Toaster client:load className="offset-y-(--header-size)" />
	</body>
</html>
