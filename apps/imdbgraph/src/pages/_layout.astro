---
import '@aamini/ui/globals.css'
import { ThemeButton } from '@/components/theme-button'
import '@fontsource-variable/inter'
import Font from 'astro/components/Font.astro'
import Analytics from '@/lib/analytics/client.astro'
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<title>IMDB Graph</title>
		<meta
			name="description"
			content="Website to visualize IMDB TV show ratings as a graph."
		/>
		<meta
			name="keywords"
			content="imdbgraph.org, imdbgraph.com, IMDB, Graph, IMDB Graph, 
      IMDB Chart, imdbgraph, Visualize, Episode ratings, chart, season, 
      episode"
		/>
		<Font cssVariable="--font-inter" preload />
		<Analytics />
		<script is:inline>
			const getThemePreference = () => {
				if (
					typeof localStorage !== 'undefined' &&
					localStorage.getItem('theme')
				) {
					return localStorage.getItem('theme')
				}
				return window.matchMedia('(prefers-color-scheme: dark)').matches
					? 'dark'
					: 'light'
			}
			const isDark = getThemePreference() === 'dark'
			document.documentElement.classList[isDark ? 'add' : 'remove']('dark')
			if (typeof localStorage !== 'undefined') {
				const observer = new MutationObserver(() => {
					const isDark = document.documentElement.classList.contains('dark')
					localStorage.setItem('theme', isDark ? 'dark' : 'light')
				})
				observer.observe(document.documentElement, {
					attributes: true,
					attributeFilter: ['class'],
				})
			}
		</script>
	</head>
	<body class="bg-background min-h-dvh min-w-80 antialiased">
		<div class="flex min-h-dvh flex-col">
			{/* Header with theme button in top right corner */}
			<div class="ml-auto p-3">
				<ThemeButton client:load />
			</div>
			{/* Main content */}
			<div class="flex w-full flex-1 flex-col"><slot /></div>
			{/* Footer */}
			<footer class="w-full px-6 py-6">
				<div class="flex flex-col items-center justify-between gap-4">
					<p
						class="text-muted-foreground text-balance text-center text-sm leading-loose"
					>
						Built by{' '}
						<a
							href="https://www.linkedin.com/in/aria-amini/"
							target="_blank"
							rel="noreferrer"
							class="font-medium underline underline-offset-4"
						>
							Aria
						</a>
						. The source code is available on{' '}
						<a
							href="https://github.com/aamini11/imdbgraph"
							target="_blank"
							rel="noreferrer"
							class="font-medium underline underline-offset-4"
						>
							GitHub
						</a>
						.
					</p>
				</div>
			</footer>
		</div>
	</body>
</html>
