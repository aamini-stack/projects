{
	"name": "dota-visualizer",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"imports": {
		"#/*": "./src/*"
	},
	"scripts": {
		"build": "vite build",
		"dev": "vite dev --port 3000",
		"serve": "vite preview",
		"start": "node .output/server/index.mjs",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --type-aware --max-warnings=0",
		"test": "vitest run",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project browser --project server",
		"test:watch": "vitest --watch",
		"e2e": "pnpm --filter @aamini/scripts exec aamini e2e dota-visualizer",
		"e2e:update": "pnpm --filter @aamini/scripts exec aamini e2e dota-visualizer --update-snapshots",
		"report": "playwright show-report",
		"verify": "turbo run build lint format test typecheck e2e"
	},
	"dependencies": {
		"@aamini/ui": "workspace:*",
		"@fontsource-variable/dm-sans": "^5.2.8",
		"@radix-ui/react-select": "^2.2.6",
		"@tanstack/react-query": "^5.90.21",
		"@tanstack/react-router": "^1.159.10",
		"@tanstack/react-router-devtools": "^1.159.10",
		"@tanstack/react-router-ssr-query": "^1.159.10",
		"@tanstack/react-start": "^1.159.11",
		"@tanstack/router-plugin": "^1.159.11",
		"arktype": "^2.1.22",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.564.0",
		"nitro": "latest",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"recharts": "2.15.4",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@aamini/config-testing": "workspace:*",
		"@aamini/config-typescript": "workspace:*",
		"@aamini/config-vite": "workspace:*",
		"@playwright/test": "^1.57.0",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/devtools-vite": "^0.5.1",
		"@types/node": "^25.2.3",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.4",
		"@vitest/browser": "^4.0.18",
		"babel-plugin-react-compiler": "^1.0.0",
		"msw": "^2.12.4",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.9.3",
		"vite": "^7.3.1",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18",
		"vitest-browser-react": "^2.0.5"
	}
}
