{
  "extends": "@aamini/config-typescript/next",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/importMeta"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "mocks/*.ts"
  ],
  "exclude": ["node_modules"]
}
