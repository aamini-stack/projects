---
import { Button } from '@aamini/ui/components/button'
import astroLogo from '#/assets/astro.svg'
import background from '#/assets/background.svg'
import { FeatureCard } from '#/components/feature-card'
import Layout from '#/pages/_Layout.astro'
---

<Layout>
	<!-- Background with modern gradient blur effect -->
	<div class="fixed inset-0 -z-10">
		<img
			src={background.src}
			alt=""
			class="h-full w-full object-cover blur-[100px]"
			fetchpriority="high"
		/>
		<div
			class="from-background/20 via-background/40 to-background/60 absolute inset-0 bg-gradient-to-br"
		>
		</div>
	</div>

	<!-- Main container with modern layout -->
	<div
		class="mx-auto flex min-h-screen max-w-7xl flex-col items-center justify-center gap-8 p-4 lg:flex-row lg:p-8"
	>
		<!-- Hero Section -->
		<main
			class="flex max-w-2xl flex-1 flex-col items-center space-y-8 text-center lg:items-start lg:text-left"
		>
			<!-- Logo with subtle animation -->
			<div class="group">
				<a
					href="https://astro.build"
					class="inline-block transition-transform hover:scale-105"
				>
					<img
						src={astroLogo.src}
						width="120"
						height="50"
						alt="Astro Homepage"
						class="drop-shadow-lg"
					/>
				</a>
			</div>

			<!-- Modern Hero Text -->
			<div class="space-y-4">
				<h1
					class="text-foreground text-3xl font-bold leading-tight lg:text-4xl"
				>
					Welcome to your
					<span
						class="bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text font-extrabold text-transparent"
					>
						Astro Template
					</span>
				</h1>

				<p class="text-muted-foreground max-w-xl text-lg leading-relaxed">
					Get started by exploring the
					<code
						class="text-foreground relative inline-flex items-center rounded-lg border border-pink-200 bg-gradient-to-r from-pink-100 to-purple-100 px-3 py-1 font-mono text-sm dark:border-pink-800 dark:from-pink-900/20 dark:to-purple-900/20"
					>
						src/pages
					</code>
					directory in your project.
				</p>
			</div>

			<!-- Action Buttons -->
			<div class="flex w-full flex-col gap-4 sm:w-auto sm:flex-row">
				<Button
					asChild
					size="lg"
					className="bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg transition-all duration-200 hover:from-blue-700 hover:to-purple-700 hover:shadow-xl"
				>
					<a href="https://docs.astro.build"> ðŸ“š Read our docs </a>
				</Button>

				<Button
					asChild
					variant="outline"
					size="lg"
					className="hover:bg-accent/50 group border-2"
				>
					<a href="https://astro.build/chat" class="flex items-center gap-2">
						Join Discord
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 127.14 96.36"
							class="h-4 w-4 transition-transform group-hover:scale-110"
						>
							<path
								fill="currentColor"
								d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z"
							></path>
						</svg>
					</a>
				</Button>
			</div>
		</main>
		<FeatureCard />
	</div>
</Layout>
