---
import { Phone, MapPin, Clock } from 'lucide-react'

const phone = '504-885-1635'
const href = `tel:1${phone.replace(/-/g, '')}`
const mapLink = 'https://maps.app.goo.gl/HFwuccUoHaHKUXVG9'
const location = '3943 Veterans Blvd, Metairie, LA'
---

<header
	class="text-md top-0 z-50 min-w-fit border-b border-stone-200 bg-white/95 text-nowrap shadow-md backdrop-blur-xl supports-[backdrop-filter]:bg-white/90 md:sticky"
>
	<div
		class="mx-auto flex max-w-5xl flex-nowrap justify-between gap-4 p-4 text-stone-600 max-md:flex-col max-md:items-start md:gap-6 md:px-8 md:py-6"
	>
		<div
			class="space-y-1.5 max-md:w-full max-md:border-t max-md:border-stone-200 max-md:pt-4 max-md:first:border-t-0 max-md:first:pt-0"
		>
			<a
				class="group flex items-center gap-1.5 font-semibold text-stone-900 transition-colors duration-200 hover:text-lime-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600"
				href={href}
			>
				<Phone
					className="inline-block h-5 w-5 text-lime-600 transition-transform duration-200 group-hover:scale-110 md:h-6 md:w-6"
					client:load
				/>
				<span>{phone}</span>
			</a>
		</div>
		<div
			class="space-y-1.5 max-md:w-full max-md:border-t max-md:border-stone-200 max-md:pt-4"
		>
			<a
				class="group flex items-center gap-1.5 font-medium text-stone-700 transition-colors duration-200 hover:text-lime-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600"
				href={mapLink}
				target="_blank"
				rel="noreferrer"
			>
				<MapPin
					className="inline-block h-5 w-5 text-lime-600 transition-transform duration-200 group-hover:scale-110 md:h-6 md:w-6"
					client:load
				/>
				<span>{location}</span>
			</a>
		</div>
		<div
			class="space-y-1.5 max-md:w-full max-md:border-t max-md:border-stone-200 max-md:pt-4"
		>
			<p class="flex items-center gap-1.5 font-medium text-stone-700">
				<Clock className="h-5 w-5 text-lime-600 md:h-6 md:w-6" client:load />
				<span>Mon-Sat, 10AM-6PM</span>
			</p>
		</div>
	</div>
</header>
