---
import { StorePhotos } from '#/components/store-photos'
import { Image } from 'astro:assets'
import { Phone, Mail } from 'lucide-react'
---

<section
	class="scroll-mt-8 space-y-8 rounded-3xl bg-gradient-to-br from-white via-amber-50 to-stone-50 p-8 shadow-xl shadow-stone-200/60 ring-1 ring-amber-100 sm:p-10"
	id="overview"
	role="region"
	aria-labelledby="hero-title"
>
	<div class="grid grid-cols-1 items-start gap-8 lg:grid-cols-2 lg:gap-12">
		<!-- Hero Text Content -->
		<div class="order-1 space-y-6">
			<div class="flex items-center gap-4">
				<Image
					src="/icon.png"
					alt="PC Tune-Ups vintage computer illustration"
					class="h-24 w-24"
					width="1024"
					height="1024"
					decoding="async"
				/>
				<h1
					id="hero-title"
					class="text-5xl font-bold leading-tight text-stone-900 sm:text-6xl"
				>
					PC Tune-Ups
				</h1>
			</div>
			<p class="max-w-3xl text-xl leading-relaxed text-stone-700 sm:text-2xl">
				Your neighborhood team for fast, friendly computer and device repair in
				the Greater New Orleans areaâ€”with <span
					class="font-semibold text-amber-700">10+ years</span
				> of hands-on experience.
			</p>

			<div class="flex flex-wrap gap-4 pt-4">
				<a
					href="tel:15048851635"
					class="inline-flex items-center gap-2 rounded-full bg-amber-500 px-7 py-3 text-lg font-semibold text-white transition-all duration-200 hover:translate-y-[-1px] hover:bg-amber-600 hover:shadow-lg hover:shadow-amber-200/60 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600"
				>
					<Phone className="h-6 w-6" client:load />
					<span>Call Now</span>
				</a>
				<a
					href="mailto:info@afcom-inc.com"
					class="inline-flex items-center gap-2 rounded-full border border-stone-300 bg-white px-7 py-3 text-lg font-semibold text-stone-900 transition-all duration-200 hover:translate-y-[-1px] hover:bg-amber-50 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600"
				>
					<Mail className="h-6 w-6 text-amber-600" client:load />
					<span>Email Us</span>
				</a>
			</div>
		</div>
		<!-- Integrated Store Photos Carousel -->
		<div
			class="order-2 overflow-hidden rounded-2xl border border-stone-200 bg-white shadow-lg shadow-stone-300/40"
		>
			<StorePhotos client:load />
		</div>
	</div>
</section>
