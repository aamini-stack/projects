---
import { StorePhotos } from '#/components/store-photos'
import { Phone, Mail } from 'lucide-react'
---

<section
	class="scroll-mt-8 space-y-8 rounded-3xl bg-white/80 p-8 shadow-sm sm:p-10"
	id="overview"
	role="region"
	aria-labelledby="hero-title"
>
	<div class="grid grid-cols-1 items-start gap-8 lg:grid-cols-2 lg:gap-12">
		<!-- Hero Text Content -->
		<div class="order-1 space-y-6">
			<h1
				id="hero-title"
				class="text-5xl font-extrabold leading-tight text-[#C75C2F] sm:text-6xl"
			>
				PC Tune-Ups
			</h1>
			<p
				class="max-w-3xl text-xl leading-relaxed text-[#4F4A3F] sm:text-2xl"
			>
				Your neighborhood team for fast, friendly computer and device repair
				in the Greater New Orleans areaâ€”with <span
					class="font-semibold text-[#C75C2F]">10+ years</span
				> of hands-on experience.
			</p>

			<div class="flex flex-wrap gap-4 pt-4">
				<a
					href="tel:15048851635"
					class="inline-flex items-center gap-2 rounded-full bg-[#C75C2F] px-7 py-3 text-lg font-semibold text-white transition-all duration-200 hover:translate-y-[-1px] hover:bg-[#B6562B] hover:shadow-lg hover:shadow-[#E3B493]/40"
				>
					<Phone className="h-6 w-6" client:load />
					<span>Call Now</span>
				</a>
				<a
					href="mailto:info@afcom-inc.com"
					class="inline-flex items-center gap-2 rounded-full border border-[#C75C2F]/30 bg-white px-7 py-3 text-lg font-semibold text-[#2D2A26] transition-all duration-200 hover:translate-y-[-1px] hover:bg-[#FFE8D5]"
				>
					<Mail className="h-6 w-6 text-[#C75C2F]" client:load />
					<span>Email Us</span>
				</a>
			</div>
		</div>
		<!-- Integrated Store Photos Carousel -->
		<div
			class="order-2 overflow-hidden rounded-2xl border border-[#E1D4B6] shadow-lg shadow-[#D9C7A4]/40"
		>
			<StorePhotos client:load />
		</div>
	</div>
</section>
