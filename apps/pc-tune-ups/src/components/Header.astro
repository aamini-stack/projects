---
import { Phone, MapPin, Clock } from "lucide-react";

---
<header
	class="sticky top-0 z-50 border-b border-stone-200 bg-white/95 shadow-sm backdrop-blur-xl supports-[backdrop-filter]:bg-white/90"
>
	<div
		class="mx-auto flex max-w-5xl flex-wrap justify-between gap-6 px-6 py-6 text-base text-stone-600 sm:px-8"
	>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-stone-500">
				Call
			</p>
			<a
				class="group flex items-center gap-1.5 text-lg font-semibold text-stone-900 transition-colors duration-200 hover:text-amber-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600"
				href="tel:15048851635"
			>
				<Phone
					className="inline-block h-6 w-6 text-amber-600 transition-transform duration-200 group-hover:scale-110"
					client:load
				/>
				<span>1-504-885-1635</span>
			</a>
		</div>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-stone-500">
				Visit
			</p>
			<a
				class="group flex items-center gap-1.5 text-lg font-medium text-stone-700 transition-colors duration-200 hover:text-amber-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600"
				href="https://maps.google.com/?q=5416+Veterans+Blvd,+Metairie,+LA+70003"
				target="_blank"
				rel="noreferrer"
			>
				<MapPin
					className="inline-block h-6 w-6 text-amber-600 transition-transform duration-200 group-hover:scale-110"
					client:load
				/>
				<span>5416 Veterans Blvd, Metairie, LA</span>
			</a>
		</div>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-stone-500">
				Hours
			</p>
			<p class="flex items-center gap-1.5 text-lg font-medium text-stone-700">
				<Clock className="h-6 w-6 text-amber-600" client:load />
				<span>Mon-Sat, 10AM-6PM</span>
			</p>
		</div>
	</div>
</header>
