---
import { Phone, MapPin, Clock } from 'lucide-react'
---

<header
	class="sticky top-0 z-50 border-b border-[#E1D4B6] bg-[#FFF4DA]/95 shadow-sm backdrop-blur-xl supports-[backdrop-filter]:bg-[#FFF4DA]/90"
>
	<div
		class="mx-auto flex max-w-4xl flex-wrap justify-between gap-6 px-6 py-6 text-base text-[#4B4538] sm:px-8"
	>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-[#8E6C3A]">
				Call
			</p>
			<a
				class="group flex items-center gap-1.5 text-lg font-semibold text-[#2D2A26] transition-colors duration-200 hover:text-[#C75C2F]"
				href="tel:15048851635"
			>
				<Phone
					className="inline-block h-6 w-6 text-[#C75C2F] transition-transform duration-200 group-hover:scale-110"
					client:load
				/>
				<span>1-504-885-1635</span>
			</a>
		</div>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-[#8E6C3A]">
				Visit
			</p>
			<a
				class="group flex items-center gap-1.5 text-lg font-medium transition-colors duration-200 hover:text-[#C75C2F]"
				href="https://maps.google.com/?q=5416+Veterans+Blvd,+Metairie,+LA+70003"
				target="_blank"
				rel="noreferrer"
			>
				<MapPin
					className="inline-block h-6 w-6 text-[#C75C2F] transition-transform duration-200 group-hover:scale-110"
					client:load
				/>
				<span>5416 Veterans Blvd, Metairie, LA</span>
			</a>
		</div>
		<div class="space-y-1.5">
			<p class="text-sm font-semibold uppercase tracking-wide text-[#8E6C3A]">
				Hours
			</p>
			<p class="flex items-center gap-1.5 text-lg font-medium">
				<Clock className="h-6 w-6 text-[#C75C2F]" client:load />
				<span>Mon-Sat, 10AM-6PM</span>
			</p>
		</div>
	</div>
</header>
